<html translate="no">
  <head>
    <meta charset="utf-8" />
    <title>Deutsches Haus | Meniu</title>
    <link rel="icon" href="img/logo-medium.png" type="image/png" sizes="16x16" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link rel="stylesheet" href="css/styles.css" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;300;400;500;700;900&display=swap" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/2f166c40b2.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <div class="cover-wrapper">
      <img class="cover-photo" src="img/cover-photo.jpg" />
      <div class="bottom-gradient"></div>
      <div class="restaurant-logo-wrapper">
        <div class="inner">
          <img src="img/restaurant-logo.jpg" alt="Restaurant Logo" class="restaurant-logo" />
        </div>
      </div>
      <!-- <h1 class="title">Subway Sigma</h1> -->
      <h2 class="title">Meniu</h2>
    </div>
    <div class="search-wrapper">
      <div class="search-icon">
        <i class="fas fa-search"></i>
      </div>
      <input type="text" placeholder="Caută" />
    </div>
    <div class="categories-wrapper">
      <div class="category-button">Aperitive</div>
      <div class="category-button">Supe</div>
      <div class="category-button">Fel principal</div>
      <div class="category-button">Grill – Cârnați</div>
      <div class="category-button">Paste făcute în casă</div>
      <div class="category-button">Garnituri</div>
      <div class="category-button">Salate</div>
      <div class="category-button">Desert</div>
      <div class="category-button">Sosuri</div>
    </div>
    <div class="products-wrapper">
      <div class="category-label">Aperitive</div>
      <div class="product">
        <div class="name">Brezzel cu cremă de brânză</div>
        <div class="weight">150gr</div>
        <div class="price">15 RON</div>
        <img src="img/product-images/Brezzel-cu-crema-de-branza.jpg" alt="Brezzel cu cremă de brânză">
        <div class="gradient"></div>
      </div>
      <div class="product">
        <div class="name">Bacon uscat</div>
        <div class="weight">80gr</div>
        <div class="price">17 RON</div>
        <img src="img/product-images/Bacon-uscat.jpg" alt="Brezzel cu cremă de brânză">
        <div class="gradient"></div>
      </div>
      <div class="product">
        <div class="name">Urechiușe de porc prăjite și picante</div>
        <div class="weight">100gr</div>
        <div class="price">24 RON</div>
      </div>
      <div class="product">
        <div class="name">Cârnăciori de casă din carne de mistreț</div>
        <div class="weight">65gr</div>
        <div class="price">19.5 RON</div>
      </div>
      <div class="product">
        <div class="name">Pâine cu untură, bacon și ceapă verde</div>
        <div class="weight">100gr</div>
        <div class="price">14 RON</div>
        <img src="img/product-images/Paine-cu-untura-ceapa-verde-si-bacun.jpg" alt="Brezzel cu cremă de brânză">
        <div class="gradient"></div>
      </div>
      <div class="product">
        <div class="name">Pate de casă cu ridichi</div>
        <div class="weight">150gr</div>
        <div class="price">15 RON</div>
      </div>
      <div class="product">
        <div class="name">Pastă de jumări cu ceapă verde</div>
        <div class="weight">100gr</div>
        <div class="price">15 RON</div>
      </div>
    </div>
  </body>
  <script src="js/app.js"></script>
</html>

